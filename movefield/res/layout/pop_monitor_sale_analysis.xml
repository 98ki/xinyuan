<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
     >
    <LinearLayout 
        android:layout_width="120dp"
        android:layout_height="200dp"
    	android:orientation="vertical"
    	android:background="@drawable/pop_sale_analysis"
        >
        <View 
            android:layout_width="match_parent"
    	    android:layout_height="10dp"
            />
         <RelativeLayout 
        android:id="@+id/relative_day"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:text="日"
            />
        <ImageView 
            android:id="@+id/img_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/select_sale_analysis"
            android:visibility="gone"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/relative_week"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:text="周"
            />
        <ImageView 
             android:id="@+id/img_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/select_sale_analysis"
            android:visibility="gone"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/relative_month"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:text="月"
            />
        <ImageView 
            android:id="@+id/img_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/select_sale_analysis"
            android:visibility="gone"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/relative_quarter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:text="季度"
            />
        <ImageView 
            android:id="@+id/img_quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/select_sale_analysis"
            android:visibility="gone"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            />
        
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/relative_year"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:text="年"
            />
        <ImageView 
            android:id="@+id/img_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/select_sale_analysis"
            android:visibility="gone"
            />
    </RelativeLayout>
    </LinearLayout>
   <View 
       android:layout_width="10dp"
       android:layout_height="140dp"
       android:background="#ffffff"
       android:layout_gravity="bottom"
       />

</LinearLayout>
