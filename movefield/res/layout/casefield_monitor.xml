<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="20dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#8d8d8d"
                android:text="销售业绩"
                />
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
            <RelativeLayout 
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                >
                <com.xlj.erp.movefield.widget.CakeSurfaceView
		            android:id="@+id/cake_statistic_chart"
		            android:layout_width="100dp"
		            android:layout_height="100dp"
		            android:layout_centerHorizontal="true"
		             />
                <TextView
                    android:id="@+id/tv_target_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cake_statistic_chart"
                    android:textColor="#8d8d8d"
                    android:text="本月目标:"
                    />
                <TextView
                    android:id="@+id/tv_targetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cake_statistic_chart"
                    android:layout_toRightOf="@id/tv_target_lable"
                    android:layout_marginLeft="5dp"
                    android:text="2500万"
                    />
            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:orientation="vertical"
                >
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_compelete_amount"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:textSize="35sp"
	                    android:textColor="#ef6b35"
	                    android:textStyle="bold"
	                    android:text="2250"
	                    />
                    <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:textColor="#8d8d8d"
	                    android:text="万元"
	                    />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="5dp"
	                    android:textColor="#8d8d8d"
	                    android:text="本日"
	                    />
                    <LinearLayout 
                        android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="10dp"
	                    android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" 
                            >
                            <TextView 
                                android:layout_width="20dp"
	                            android:layout_height="20dp"
	                            android:gravity="center"
	                            android:background="#ebc26e"
	                            android:textColor="#ffffff"
	                            android:text="定"
                                />
                            <TextView 
                                android:id="@+id/tv_subscribecount"
                                android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:gravity="center"
	                            android:layout_marginLeft="10dp"
	                            android:text="5套"
                                />
                            <TextView 
                                android:id="@+id/tv_subscribeamount"
                                android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:gravity="center"
	                            android:layout_marginLeft="10dp"
	                            android:text="500万元"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" 
	                        android:layout_marginTop="10dp"
                            >
                            <TextView 
                                android:layout_width="20dp"
	                            android:layout_height="20dp"
	                            android:gravity="center"
	                            android:background="#fd8b8d"
	                            android:textColor="#ffffff"
	                            android:text="签"
                                />
                            <TextView 
                                android:id="@+id/tv_signcount"
                                android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:gravity="center"
	                            android:layout_marginLeft="10dp"
	                            android:text="2套"
                                />
                            <TextView 
                                android:id="@+id/tv_signamount"
                                android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:gravity="center"
	                            android:layout_marginLeft="10dp"
	                            android:text="200万元"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f3f3f3"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="20dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#8d8d8d"
                android:text="客户意向"
                />
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center|left"
            >
		        <RelativeLayout 
		                android:layout_width="120dp"
		                android:layout_height="match_parent"
		                android:layout_marginLeft="10dp"
		                >
		                <ImageView 
		                    android:id="@+id/img_customer_chart"
		                    android:layout_width="100dp"
		                    android:layout_height="100dp"
		                    android:src="@drawable/ic_launcher"
		                    android:layout_centerHorizontal="true"
		                    />
		                <TextView
		                    android:id="@+id/tv_totalcustomer_lable"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_below="@id/img_customer_chart"
		                    android:textColor="#8d8d8d"
		                    android:text="总客户:"
		                    />
		                <TextView
		                    android:id="@+id/tv_interestcount"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_below="@id/img_customer_chart"
		                    android:layout_toRightOf="@id/tv_totalcustomer_lable"
		                    android:layout_marginLeft="5dp"
		                    android:textColor="#8d8d8d"
		                    android:text="4292人"
		                    />
		            </RelativeLayout>
		            
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:orientation="vertical"
		            android:gravity="center"
		            >
		            <TextView 
		                android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="#8d8d8d"
	                    android:text="必买"
		                />
		            <TextView 
		                android:id="@+id/tv_boughtcount"
		                android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:textColor="#ef6b35"
	                    android:textStyle="bold"
	                    android:textSize="24sp"
	                    android:text="171"
		                />
		            <TextView 
		                android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:textColor="#8d8d8d"
	                    android:text="一般意向"
		                />
		            <TextView 
		                android:id="@+id/tv_normalinterestcount"
		                android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:textColor="#ef6b35"
	                    android:textStyle="bold"
	                    android:textSize="24sp"
	                    android:text="892"
		                />
		        </LinearLayout>
		        
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_marginLeft="20dp"
		            android:gravity="center"
		            android:orientation="vertical"
		            >
		            <TextView 
		                android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="#8d8d8d"
	                    android:text="高意向"
		                />
		            <TextView 
		                android:id="@+id/tv_hightinterestcount"
		                android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:textColor="#ef6b35"
	                    android:textStyle="bold"
	                    android:textSize="24sp"
	                    android:text="448"
		                />
		            <TextView 
		                android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:textColor="#8d8d8d"
	                    android:text="无意向"
		                />
		            <TextView 
		                android:id="@+id/tv_nointerestcount"
		                android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:textColor="#ef6b35"
	                    android:textStyle="bold"
	                    android:textSize="24sp"
	                    android:text="2781"
		                />
		        </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f3f3f3"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="20dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#8d8d8d"
                android:text="客户跟进"
                />
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            >
            <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:orientation="vertical"
            	android:layout_weight="1"
            	android:gravity="center"
                >
                <ImageView 
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/ic_register_customer_normal"
                    />
                <TextView
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="5dp"
            		android:textColor="#8d8d8d"
            		android:text="今日跟进"
                    />
                <TextView
                    android:id="@+id/tv_followcount"
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="5dp"
            		android:textColor="#8d8d8d"
            		android:text="109"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:orientation="vertical"
            	android:layout_weight="1"
            	android:gravity="center"
                >
                <ImageView 
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/ic_register_customer_normal"
                    />
                <TextView
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="5dp"
            		android:textColor="#8d8d8d"
            		android:text="今日回访"
                    />
                <TextView
                    android:id="@+id/tv_visitcount"
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="5dp"
            		android:textColor="#8d8d8d"
            		android:text="109"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:orientation="vertical"
            	android:layout_weight="1"
            	android:gravity="center"
                >
                <ImageView 
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/ic_register_customer_normal"
                    />
                <TextView
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="5dp"
            		android:textColor="#8d8d8d"
            		android:text="新客户登记"
                    />
                <TextView
                    android:id="@+id/tv_registercustomercount"
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="5dp"
            		android:textColor="#8d8d8d"
            		android:text="109"
                    />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
            	android:layout_height="match_parent"
            	android:orientation="vertical"
            	android:layout_weight="1"
            	android:gravity="center"
                >
                <ImageView 
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:src="@drawable/ic_register_customer_normal"
                    />
                <TextView
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="5dp"
            		android:textColor="#8d8d8d"
            		android:text="客户管理"
                    />
                <TextView
                    android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_marginTop="5dp"
            		android:textColor="#8d8d8d"
            		android:text="109"
                    />
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
