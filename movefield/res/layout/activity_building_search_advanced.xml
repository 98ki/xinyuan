<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/search_unit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_search_arrow_down"
            android:gravity="center"
            android:padding="12dp"
            android:singleLine="true"
            android:text="单元"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/building_info_divider" />

        <TextView
            android:id="@+id/search_roomtype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_search_arrow_down"
            android:gravity="center"
            android:padding="12dp"
            android:singleLine="true"
            android:text="户型"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/building_info_divider" />

        <TextView
            android:id="@+id/search_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_search_arrow_down"
            android:gravity="center"
            android:padding="12dp"
            android:singleLine="true"
            android:text="面积"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

    <include
        android:id="@+id/search_condition_divider"
        layout="@layout/devider_building_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格区间"
            android:textColor="@color/light_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/min_price"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_building_search_advanced_et"
            android:inputType="numberDecimal"
            android:padding="2dp"
            android:textColor="@color/light_black"
            android:textSize="16sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/max_price"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/bg_building_search_advanced_et"
            android:inputType="numberDecimal"
            android:padding="2dp"
            android:textColor="@color/light_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="楼层区间"
            android:textColor="@color/light_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/start_floor"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_building_search_advanced_et"
            android:padding="2dp"
            android:textColor="@color/light_black"
            android:textSize="16sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/end_floor"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/bg_building_search_advanced_et"
            android:padding="2dp"
            android:textColor="@color/light_black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/reset"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_building_search_advanced_et"
            android:padding="0dp"
            android:text="重置"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/search"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_btn"
            android:padding="0dp"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>